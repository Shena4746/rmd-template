{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Clear Cache",
			"type": "shell",
			"command": "Rscript '${workspaceFolder}/tools/clear_cache.R'",
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem",
				"close": true
			}
		},
		{
			"label": "Clear Rendered Results",
			"type": "shell",
			"command": "echo Cleared!",
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem",
				"close": true
			},
			"dependsOrder": "sequence",
			"dependsOn": [
				"Clear Cache",
				"Clear All Output Files in docs Directory",
				"Clear Cache"
			]
		},
		{
			"label": "Clear All Output Files in docs Directory",
			"type": "shell",
			"command": "Rscript ${workspaceFolder}/tools/clear_all_output.R",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem",
				"close": true
			}
		},
		{
			"label": "Render Book (stop)",
			"type": "shell",
			"command": "Rscript '${workspaceFolder}/tools/render_book.R'",
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem",
				//"close": true
			}
		},
		{
			"label": "Render Book",
			"type": "shell",
			"command": "Rscript '${workspaceFolder}/tools/render_book.R'",
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem",
				"close": true
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Serve Book",
			"type": "shell",
			"command": "Rscript '${workspaceFolder}/tools/serve_book.R'",
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem",
				"close": true
			}
		},
		{
			"label": "Open Served Book",
			"type": "shell",
			"command": "google-chrome http://127.0.0.1:4321",
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem",
				"close": true
			},
		},
		{
			"label": "Serve and Open Book",
			"type": "shell",
			"command": "Rscript '${workspaceFolder}/tools/clear_cache.R'",
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem",
				"close": true
			},
			"dependsOrder": "parallel", // setting this "sequence" spoils the task since serve_book() does not end until it is abandoned. 
			"dependsOn": [
				"Serve Book",
				"Open Served Book",
			]
		},
		{
			"label": "Open index.html in Chrome",
			"type": "shell",
			"command": "Rscript ${workspaceFolder}/tools/open_in_chrome.R",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem",
				"close": true
			}
		},
	]
}